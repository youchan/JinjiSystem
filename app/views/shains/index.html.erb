<h1>社員一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>役職</th>
      <th>基本給</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shains.each do |shain| %>
      <tr>
        <td><%= shain.name %></td>
        <td><%= shain.yakushoku %></td>
        <td><%= shain.kihonkyu %></td>
        <td><%= link_to 'Show', shain.becomes(Shain) %></td>
        <td><%= link_to 'Edit', edit_shain_path(shain) %></td>
        <td><%= link_to 'Destroy', shain.becomes(Shain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

